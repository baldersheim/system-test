schema campaign {
  document campaign {
    field ref type reference<advertiser> {
      indexing: attribute | summary
    }
    field budget_slow type int {
      indexing: attribute | summary
    }
    field budget_fast type int {
      indexing: attribute | summary
      attribute: fast-search
    }
  }
  import field ref.root_budget_fast as root_budget_fast {}
}
