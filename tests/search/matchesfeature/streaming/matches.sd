schema matches {
  document matches {
    field f1 type string {
      indexing: index | summary
    }
    field f2 type string {
      indexing: index | summary
      rank: filter
    }
    field f3 type string {
      indexing: attribute | summary
    }
    field f4 type array<string> {
      indexing: attribute | summary
    }
    field f5 type map<string,int> {
      indexing: summary
      struct-field key { indexing: attribute }
      struct-field value { indexing: attribute }
    }
  }
  fieldset default {
    fields: f1, f2
  }
  rank-profile default {
    summary-features {
      matchCount(f1)
      matchCount(f2)
      matchCount(f3)
      matches(f1)
      matches(f1,0)
      matches(f1,1)
      matches(f2)
      matches(f2,0)
      matches(f2,1)
      matches(f3)
      matches(f3,0)
      matches(f3,1)
      matches(f4)
      matches(f4,0)
      matches(f4,1)
    }
  }
}
