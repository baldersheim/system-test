schema query {
  document query {
    field a type string {
      indexing: index | summary
    }
  }
  fieldset default {
    fields: a
  }

  rank-profile default {
    summary-features {
      query(foo)
      query(foo.bar) # Not allowed
      query(foo.bar.baz) # Not allowed
    }
    inputs {
      query(foo): 5.5
    }
  }

  rank-profile vector {
    inputs {
      query(bar) tensor<float>(x[3]):[1,2,3]
    }
    function mysum() {
      expression: sum(query(bar))
    }
    summary-features {
      rankingExpression(mysum)
    }
  }
}
