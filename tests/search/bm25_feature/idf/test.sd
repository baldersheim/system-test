schema test {
  document test {
    field id type string {
      indexing: index | summary
    }
    field content type string {
      indexing: index | summary
      index: enable-bm25
    }
    field extra type string {
      indexing: index | summary
      index: enable-bm25
    }
  }
  fieldset both {
    fields: content, extra
  }
  rank-profile default {
    first-phase {
      expression {
        bm25(content) + bm25(extra)
      }
    }
    summary-features {
      bm25(content)
      bm25(extra)
      term(0).significance
      term(1).significance
    }
    match-features {
      bm25(content)
      bm25(extra)
      term(0).significance
      term(1).significance
    }
  }
}
