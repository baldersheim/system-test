schema test {
  document test {
    field content type string {
      indexing: index | summary
      index: enable-bm25
    }
  }
  rank-profile default {
    first-phase {
      expression {
        bm25(content)
      }
    }
    summary-features {
      bm25(content)
    }
  }
  rank-profile avgfl100 inherits default {
    rank-properties {
      bm25(content).averageFieldLength: 100.0
    }
  }
}
