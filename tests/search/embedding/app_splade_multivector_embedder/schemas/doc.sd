schema doc {

  document doc {

    field text type array<string> {
      indexing: index | summary
    }

  }

  field dt type tensor<bfloat16>(chunk{}, t{}) {
      indexing: input text | embed splade chunk | attribute
  }

  rank-profile default {
    inputs {
      query(qt) tensor<float>(t{})
    }

    first-phase {
      expression: nativeRank(text) + reduce(sum(query(qt) * attribute(dt), max, chunk))
    }

    summary-features {
      query(qt)
      attribute(dt)
    }
  }
}
